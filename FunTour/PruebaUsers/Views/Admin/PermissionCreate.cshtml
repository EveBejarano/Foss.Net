@model FunTourDataLayer.Models.Permission
@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='text']").text();
    });
</script>
<div class="panel">
    <fieldset>
        <legend>
            <h3>
                Create Permission</h3>
        </legend>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)    
            <div class="editor-label">
                @Html.LabelFor(model => model.PermissionDescription, "Permission Description")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.PermissionDescription, new { style = "width:450px" })
                @Html.ValidationMessageFor(model => model.PermissionDescription)
            </div>          
            <br />
            <input type="submit" value="Create" />           
        }
    </fieldset>
</div>
<div>
    @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
</div>
