@{
    ViewBag.Title = "Home Page";
}
<!--Section: Slider -->
<style>
    select option {
        margin: 40px;
        background: #fff;
        color: #fff;
        text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
    }
</style>
<body id="home" class="scrollspy">

    <section class="slider">
        <ul class="slides">
            <li>
                <img src="~/Content/images/Lobito lindo.jpg"> <!-- Mundial de Rusia -->
                <div class=" banner caption center-align">
                    <h1>¡Viajá al Mundial de Rusia 2018!</h1>
                    <h5 class="light grey-text text-lighten-3
                hide-on-small-only">
                        Viví ese sueño de alentar a la selección en la cancha con FanTour.
                    </h5>
                </div>
            </li>
            <li>
                <img src="~/Content/images/egresados.jpg"> <!-- Viaje de Egresados -->
                <div class="banner caption center-align">
                    <h1>¡Tené el mejor viaje de Egresados! </h1>
                    <h5 class="light grey-text text-lighten-3
                hide-on-small-only">
                        Explorá nuestras excelentes opciones en paquetes
                        de viajes de egresados.
                    </h5>
                </div>
            </li>
            <li>
                <img src="~/Content/images/disney-world-orlando-florida-castle.jpg"> <!-- viaje a Disney -->
                <div class="banner caption center-align">
                    <h1>¡Abordá una aventura llena de magia!</h1>
                    <h5 class="light grey-text text-lighten-3
                hide-on-small-only">
                        Explorá nuestras excelentes opciones en viajes a Disney World.
                    </h5>
                </div>
            </li>
            <li>
                <img src="~/Content/images/Kangaroo.jpg"> <!-- Australia -->
                <div class="banner caption center-align">
                    <h1>¡Conocé Australia!</h1>
                    <h5 class="light grey-text text-lighten-3
                hide-on-small-only">
                        Si, hay playas. Pero más importante, hay canguros.
                    </h5>
                </div>
            </li>
        </ul>
    </section>



    <!--Section: Search-->
    <section id="search" class="section section-search  white
     white-text center scrollspy">

        <div class="container">

            <div class="row form1">
                <h4 class="grey-text text-lighten-3">Ingresá un destino y eligí tu Paquete!</h4>

                <form >

                    <div class="row">

                        <div class="input-field col s6">
                            <select id="SelectOrigen">
                                <option value="" disabled selected">Selecciona un Origen</option>
                                @foreach (var item in ViewBag.SelectOrigen)
                                {
                                    <option id="destino" value="">@item.Name</option>
                                }
                            </select>
                            <label>Origen</label>
                        </div>

                        <div class="input-field col s6">
                            <select id="SelectDestino">
                                <option value="" disabled selected>Selecciona un Destino</option>

                                @foreach (var item in ViewBag.SelectOrigen)
                                {
                                    <option id="Origen" value="">@item.Name</option>
                                }

                            </select>

                            <label>Destino</label>
                        </div>

                        <div class="input-field col s3">
                            <select class="">
                                <option id="Adult" value="" disabled selected>Cant</option>
                                <option id="Adult" value="1">1</option>
                                <option id="Adult" value="2">2</option>
                                <option id="Adult" value="3">3</option>
                            </select>
                            <label>Adultos</label>
                        </div>
                        <div class="input-field col s3">
                            <select class="">
                                <option value="" disabled selected>Cant</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                            <label>Niños</label>
                        </div>

                        <div class="input-field col s6">
                            <select class="">
                                <option id="cant" value="" disabled selected>Cant</option>
                                <option id="cant" value="1">1</option>
                                <option id="cant" value="2">2</option>
                                <option id="cant" value="3">3</option>
                                <option id="cant" value="4">4</option>
                            </select>
                            <label>Habitaciones</label>
                        </div>


                    </div>

                </form>
            </div>
        </div>

    </section>
    <!-- Section: Icon Boxes -->
    <section class="section section-icons  light-blue darken-1 center">
        <div class="container">
            <div class="row">
                <div class="col s12 m4">
                    <div class="card-panel">
                        <i class="material-icons large light-blue-text text-darken-4">room</i>
                        <h5>Temporada Baja</h5>
                        <p>Descubrí los mejores 10 destinos para visitar en temporada baja.</p>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="card-panel">
                        <i class="material-icons large light-blue-text text-darken-4">airport_shuttle</i>
                        <h5>Experiencia completa</h5>
                        <p>Traslados incluidos a eventos populares en los diferentes destinos.</p>
                    </div>
                </div>
                <div class="col s12 m4 ">
                    <div class="card-panel">
                        <i class="material-icons large light-blue-text text-darken-4">find_replace</i>
                        <h5>Destino al azar</h5>
                        <p>Obtené opciones para elegir tu próxima aventura.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Rusia -->
    <section id="rusia" class="section section-rusia scrollspy white">
        <div class="container">
            <div class="row">
                <h4 class="center "> <span class="light-blue-text text-darken-4">Rusia</span> 2018!</h4>
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/images/Lobito lindo.jpg" alt="">
                            <span class="card-title ">Moscú 7 días y 6 noches desde $80.000</span>
                        </div>
                        <div class="card-content">
                            Disfrutá un viaje all-inclusive, para vos y alguien más!! 7 días y 6 noches en la ciudad de Moscú. Incluye entradas a partidos de Argentina.
                        </div>
                        <div class="card-action light-blue darken-3">
                            <a href="#" class="white-text">Ver más>></a>
                        </div>
                    </div>
                </div>

                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/images/Lobito lindo.jpg" alt="">
                            <span class="card-title ">Volvogrado 7 días y 6 noches desde $80.000</span>
                        </div>
                        <div class="card-content">
                            Disfrutá un viaje all-inclusive, para vos y alguien más!! 7 días y 6 noches en Volvogrado. Incluye entradas a partidos de Argentina.
                        </div>
                        <div class="card-action light-blue darken-3">
                            <a href="#" class="white-text">Ver más>></a>
                        </div>
                    </div>
                </div>

                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/images/Lobito lindo.jpg" alt="">
                            <span class="card-title ">San Petersburgo 7 días y 6 noches desde $80.000</span>
                        </div>
                        <div class="card-content">
                            Disfrutá un viaje all-inclusive, para vos y alguien más!! 7 días y 6 noches en San Petersburgo. Incluye entradas a partidos de Argentina.
                        </div>
                        <div class="card-action light-blue darken-3">
                            <a href="#" class="white-text">Ver más>></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>

    <!--Section Egresados-->

    <div class="carousel carousel-slider">
        <a class="carousel-item" href="#one!"><img src="~/Content/images/egresados.jpg"></a>
        <a class="carousel-item" href="#two!"><img src="~/Content/images/Praga.jpg"></a>
        <a class="carousel-item" href="#three!"><img src="~/Content/images/egresados.jpg"></a>
        <a class="carousel-item" href="#four!"><img src="~/Content/images/egresados.jpg"></a>
    </div>


    <!--Section Vacaciones-->
    <section id="vacaciones" class="section section-vacaciones scrollspy grey-text text-darken-4">

      

    </section>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script>
        //Sidenav
        const sideNav = document.querySelector('.sidenav');
        M.Sidenav.init(sideNav, {});
        //Slider
        const slider = document.querySelector('.slider');
        M.Slider.init(slider, {
            indicators: false,
            height: 500,
            transition: 500,
            interval: 6000
        });

        //Autocomplete
        const ac = document.querySelector('.autocomplete');
        M.Autocomplete.init(ac, {
            data: {
                "Disney": null,
                "Orlando": null,
                "Australia": null,
                "Praga": null,
                "Bariloche": null,
                "Rusia": null,
            }
        })
        //Serach

        const elems = document.querySelectorAll('select');
        M.FormSelect.init(elems, {});

        const el = document.querySelectorAll('.datepicker');
        M.Datepicker.init(el, {});

        //Egresados

        var instance = M.Carousel.init({
            fullWidth: true
        });
    </script>

</body>

