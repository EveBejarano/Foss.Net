@model FunTour.Models.PaymentModel
@{
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Pagar Reserva";
}

<div class="container">
    <h3>Eliminar Reserva</h3>

    <h5>¿Está seguro de que desea eliminar esta reserva definitivamente?</h5>
    <div>
        <dl class="dl-horizontal"></dl>

        @using (Html.BeginForm("createPayment", "Reservation", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

        <div style="padding-right:10px ">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.creditCardNumber, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.creditCardNumber, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.expirationDate, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.expirationDate, new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.securityNumber, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.securityNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <div class="col-md-offset-2 col-md-10">
                    <button class="waves-effect waves-light btn blue lighten-1" type="submit">Guardar y Continuar</button>
                </div>
            </div>
        </div>
        }
        <br />
    </div>
</div>