@model FunTour.Models.TravelPackageViewModel

@{
    ViewBag.Title = "Crear Paquete Turístico";
}


@using (Html.BeginForm("Create", "TravelPackages", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

<div style="padding-right:10px ">
    <div class="form-group">
        @Html.LabelFor(model => model.PackageName, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(model => model.PackageName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FromDay, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FromDay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FromDay, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.ToDay, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ToDay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ToDay, "", new { @class = "text-danger" })
        </div>
    </div>
    <a>Tildar si desea que el transporte sea aéreo. No tildar si desea que sea por colectivo.</a> 
    @Html.CheckBoxFor(model => model.FlightOrBus, new { style = "opacity:5; pointer-events:visiblepainted"})
    
       



    <div class="form-group" style="padding-top: 20px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Guardar y Continuar" />
        </div>
    </div>
</div>
}
@Html.ActionLink("Cancelar Creación", "Index")
<div>
    @Html.ActionLink("Volver al Inicio...", "Index")
</div>
