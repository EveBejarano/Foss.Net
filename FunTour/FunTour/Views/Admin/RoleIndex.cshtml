@model IEnumerable<FunTourDataLayer.AccountManagement.RoleDetails>

@{
    ViewBag.Title = "Roles";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>

<div class="container">
    <nav>
        <div class="nav-wrapper red-darken-2">
            <div class="col s12">
                <a href="~/Admin/Index" class="breadcrumb">Usuarios</a>
                <a href="~/Admin/RoleIndex" class="breadcrumb">Roles</a>
            </div>
        </div>
    </nav>

    <h3>
        Roles
    </h3>

    <table id="RoleTable" style="width: 90%">
        <thead>
        <th>
            Role Name
        </th>
        <th>
            Role Description
        </th>
        <th>
            Is System Admin
        </th>
        <th style="width: 8%">
            Action
        </th>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.RoleName, "RoleName", new { id = item.Id_Role })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSysAdmin)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("RoleEdit", "Admin", new { id = item.Id_Role })">
                            <i class="material-icons">create</i>
                        </a>
                        <a href="@Url.Action("RoleDelete", "Admin", new { id = item.Id_Role })">
                            <i class="material-icons" type="button" id=".deleteUser">
                                delete_forever
                            </i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </table>
    <br />
    <div>
        <button class="waves-effect waves-light btn blue lighten-1" value="Create Role" onclick="location.href='@Url.Action("RoleCreate", "Admin")'">Crear</button>
        <br />
    </div>

    <br />

</div>
