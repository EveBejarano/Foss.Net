@model IEnumerable<FunTourDataLayer.AccountManagement.Permission>

@{
    ViewBag.Title = "Rights";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>


<div class="container">
    <nav>
        <div class="nav-wrapper red-darken-2">
            <div class="col s12">
                <a href="~/Admin/Index" class="breadcrumb">Usuarios</a>
                <a href="~/Admin/PermissionIndex" class="breadcrumb">Permisos</a>
            </div>
        </div>
    </nav>

    <h3>
        Permisos
    </h3>

    <table id="PermissionTable" style="width: 90%">
        <thead>
        <th>
            Permission
        </th>
        <th style="width: 8%">
            Action
        </th>
        </thead>
        @foreach (FunTourDataLayer.AccountManagement.Permission item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.PermissionDescription, "PermissionDetails", new { id = item.Id_Permission })
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("PermissionEdit", "Admin", new { id = item.Id_Permission })">
                            <i class="material-icons">create</i>
                        </a>

                        <a href="@Url.Action("PermissionDelete", "Admin", new { id = item.Id_Permission })">
                            <i class="material-icons" type="button" id=".deleteUser">
                                delete_forever
                            </i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </table>
    <br />
    <div>
        <button class="waves-effect waves-light btn blue lighten-1" onclick="location.href='@Url.Action("PermissionCreate", "Admin")'">Crear</button>
        <button class="waves-effect waves-light btn blue lighten-1" id="importPermissions2" name="importPermissions2" onclick="location.href='@Url.Action("PermissionsImport", "Admin")'">Importar permisos</button>
        @Html.ActionLink("Volver Al Menu de Usuarios", "Index", "Admin", new { @class = "waves-effect waves-light btn blue lighten-1" })
        <br />
    </div>

    <br />
</div>